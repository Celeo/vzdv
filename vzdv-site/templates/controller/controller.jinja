{% extends "_layout" %}

{% block title %}User | {{ super() }}{% endblock %}

{% block head_extra %}
<style>
  dialog::backdrop {
    background-color: rgba(255, 255, 255, 0.2);
  }
  dialog {
    background-color: var(--bs-body-bg);
    width: 30%;
    border: none;
    border-radius: 1.5rem;
  }
</style>
{% endblock %}

{% block body %}

<h2 class="pb-3">
  {{ controller.first_name }} {{ controller.last_name }}
  {% if controller.operating_initials %} - {{ controller.operating_initials }}{% endif %}
  {% if user_info and user_info.is_admin %}
    <button class="ms-2 btn btn-sm btn-warning" onclick="modalChangeOI.showModal()">
      <i class="bi bi-pencil"></i>
      Edit OIs
    </button>
  {% endif %}
</h2>

<div class="row">
  <div class="col-4">
    <div class="card">
      <div class="card-body p-3">
        <div class="card-title">
          <h3>Overview</h3>
        </div>
        <p class="card-text">
          <strong>CID:</strong> {{ controller.cid }}
          <br>
          <strong>Rating:</strong> {{ rating_str }}
          <br>
          <strong>Type:</strong> {% if not controller.is_on_roster %}Guest{% elif not controller.home_facility == 'ZDV' %}Visiting{% else %}Home{% endif %}
          <br>
          <strong>Joined:</strong> {{ controller.join_date }}
          {% if user_info and user_info.is_some_staff %}
            <br>
            <strong>Discord user ID:</strong> {{ controller.discord_id }}
            {% if controller.discord_id and user_info.is_admin %}
              <br>
              <button class="btn btn-sm btn-danger mt-2" id="button-unlink-discord">
                <i class="bi bi-eraser"></i>
                Unlink Discord
              </button>
            {% endif %}
          {% endif %}
        </p>
      </div>
    </div>
  </div>
  <div class="col-8">
    <div class="card">
      <div class="card-body p-3">
        <div class="card-title clearfix">
          <h3 class="float-start">Certifications</h3>
          {% if user_info and user_info.is_training_staff %}
            <button class="float-end btn btn-sm btn-warning" onclick="">
              <i class="bi bi-pencil"></i>
              Edit
            </button>
          {% endif %}
        </div>
        <div class="card-text">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Cert</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              {% for cert in certifications %}
                <tr>
                  <td><strong>{{ cert.name }}</strong></td>
                  <td>
                    {% if cert.value == 'certified' %}
                      <span class="badge rounded-pill text-bg-success">Certified</span>
                    {% elif cert.value == 'training' %}
                      <span class="badge rounded-pill text-bg-warning">Training</span>
                    {% elif cert.value == 'solo' %}
                      <span class="badge rounded-pill text-bg-info">Solo</span>
                    {% else %}
                      <span>None</span>
                    {% endif %}
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

{% if user_info and user_info.is_training_staff %}
  <div class="row pt-3">
    <div class="card">
      <div class="card-body p-3">
        <h3 class="card-title">Training Notes</h3>
        <div class="card-text">
          TODO
        </div>
        <a href="#" class="btn btn-sm btn-info mt-2">
          <i class="bi bi-plus-circle"></i>
          Add
        </a>
      </div>
    </div>
  </div>
{% endif %}

{% if user_info and user_info.is_some_staff %}
  <div class="row pt-3">
    <div class="card">
      <div class="card-body p-3">
        <h3 class="card-title">Staff notes</h3>
        <div class="card-text">
          TODO
        </div>
        <a href="#" class="btn btn-sm btn-info mt-2">
          <i class="bi bi-plus-circle"></i>
          Add
        </a>
      </div>
    </div>
  </div>
{% endif %}

{% if user_info and user_info.is_admin %}
  <div class="row pt-3">
    <div class="card">
      <div class="card-body p-3">
        <h3 class="card-title">Feedback</h3>
        <div class="card-text">
          TODO
        </div>
      </div>
    </div>
  </div>
{% endif %}

<dialog id="modalChangeOI">
  <h2 class="pb-3">Change OIs</h2>
  <form action="/controller/{{ controller.cid }}/ois" method="POST">
    <div class="row">
      <div class="col">
        <div class="mb-3">
          <label for="oi" class="form-label">Operating Initials</label>
          <input
            type="text"
            class="form-control"
            name="initials"
            style="text-transform: uppercase"
            value="{{ controller.operating_initials }}"
            maxlength="2">
        </div>
        <div class="d-flex justify-content-between">
          <button class="btn btn-warning" role="button" id="btn-modal-set-ois-close">Close</button>
          <button class="btn btn-primary" role="button" type="submit">Set</button>
        </div>
      </div>
    </div>
  </form>
</dialog>

<script>
  document.getElementById('button-unlink-discord')?.addEventListener('click', (e) => {
    e.preventDefault();
    const result = window.confirm("Are you sure you want to unlink this controller's Discord account?");
    if (result) {
      fetch('/controller/{{ controller.cid }}/discord/unlink', { method: 'POST' })
        .then((response) => {
          window.location.reload();
        })
        .catch((error) => {
          console.error(error);
          window.alert(`Something went wrong: ${error}`);
        })
    }
  });
  document.getElementById('btn-modal-set-ois-close').addEventListener('click', (e) => {
    e.preventDefault();
    document.getElementById('modalChangeOI').close();
  });
</script>

{% endblock %}
